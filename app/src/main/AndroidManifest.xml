<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.divetym.dive">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".DiveTymApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.CourseListActivity"
            android:label="@string/title_courses" />
        <activity android:name=".activities.CourseDetailsActivity" />
        <activity android:name=".activities.BoatDetailsActivity"/>
        <activity
            android:name=".activities.BoatListActivity"
            android:label="@string/title_boats" />
    </application>

</manifest>