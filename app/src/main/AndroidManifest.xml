<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.divetym.dive">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".DiveTymApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.DiveShopActivity" />
        <activity
            android:name=".ui.activities.CourseListActivity"
            android:label="@string/title_courses" />
        <activity android:name=".ui.activities.CourseDetailsActivity" />
        <activity android:name=".ui.activities.BoatDetailsActivity" />
        <activity
            android:name=".ui.activities.BoatListActivity"
            android:label="@string/title_boats" />
        <activity
            android:name=".ui.activities.DailyTripActivity"
            android:label="@string/title_daily_trips" />
        <activity android:name=".ui.activities.TripDetailsActivity" />
        <activity
            android:name=".ui.activities.ModifyTripActivity"
            android:label="@string/title_create_trip" />
        <activity
            android:name=".ui.activities.GuideListActivity"
            android:label="@string/title_guides" />
        <activity
            android:name=".ui.activities.AddCourseActivity"
            android:label="@string/title_add_course" />
        <activity
            android:name=".ui.activities.AddBoatActivity"
            android:label="@string/title_add_boat" />
        <activity
            android:name=".ui.activities.AddGuideActivity"
            android:label="@string/title_add_guide" />
        <activity android:name=".ui.activities.GuideDetailsActivity" />
        <activity
            android:name=".ui.activities.EditDiveShopActivity"
            android:label="@string/title_edit_dive_shop" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".ui.activities.SearchMapActivity"
            android:label="@string/title_select_location"/>
    </application>

</manifest>