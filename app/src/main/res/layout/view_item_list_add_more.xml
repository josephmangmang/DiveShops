<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_marginRight="@dimen/view_space"
    android:background="@color/blue_400"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_add_big" />

    <com.divetym.dive.ui.view.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_add_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_medium"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@color/green_50"
        android:text="@string/label_add_more" />
</RelativeLayout>