<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgound_light"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_photo_cover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dummy_image_preview" />

    <com.divetym.dive.view.RobotoTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textSize="@dimen/roboto_title_medium"
        app:layout_constraintBottom_toTopOf="@+id/text_price"
        app:layout_constraintLeft_toLeftOf="@+id/image_photo_cover"
        app:typeface="roboto_medium"
        tools:text="@string/dummy_title" />

    <com.divetym.dive.view.RobotoTextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="16dp"
        android:textSize="@dimen/roboto_subheading_regular"
        app:layout_constraintBottom_toBottomOf="@+id/image_photo_cover"
        app:layout_constraintLeft_toLeftOf="@+id/image_photo_cover"
        app:typeface="roboto_regular"
        tools:text="@string/dummy_price" />


    <Button
        android:id="@+id/button_book_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:text="@string/action_book_now"
        app:layout_constraintBottom_toBottomOf="@+id/image_photo_cover"
        app:layout_constraintRight_toRightOf="@+id/image_photo_cover" />

    <com.divetym.dive.view.RobotoTextView
        android:id="@+id/text_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textSize="@dimen/roboto_body_1_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_photo_cover"
        app:typeface="roboto_regular"
        tools:text="@string/dummy_longtext" />
</android.support.constraint.ConstraintLayout>