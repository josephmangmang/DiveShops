<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/roboto_subheading_regular"
            app:typeface="roboto_bold"
            tools:text="Short Description" />

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_info_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_info_title"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="marquee"
            android:maxLines="2"
            tools:text="@string/dummy_longtext" />

        <Button
            android:id="@+id/button_show_more"
            style="@style/AppTheme.Button.Colored.Bordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_info_body"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/action_show_more" />
    </RelativeLayout>

</android.support.v7.widget.CardView>