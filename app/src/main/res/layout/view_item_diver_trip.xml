<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small">

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_dive_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_dive_shop_name"
            android:textSize="@dimen/roboto_title_medium"
            app:typeface="roboto_bold" />

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_dive_shop"
            android:layout_toLeftOf="@+id/text_time"
            android:textSize="@dimen/roboto_title_medium"
            android:textStyle="bold"
            app:typeface="roboto_regular"
            tools:text="@string/dummy_date" />

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_dive_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_date"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/roboto_subheading_regular"
            app:typeface="roboto_bold"
            tools:text="@string/text_dive_spot" />

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_dive_site"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/roboto_title_medium"
            android:textStyle="bold"
            app:typeface="roboto_regular"
            tools:text="@string/dummy_price" />

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/roboto_title_medium"
            app:typeface="roboto_bold"
            tools:text="@string/dummy_time" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/text_price"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey_500" />

        <com.divetym.dive.ui.view.RobotoTextView
            android:id="@+id/text_spot_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_divider"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/dummy_spot_left" />
    </RelativeLayout>
</android.support.v7.widget.CardView>