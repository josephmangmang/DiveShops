<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_medium"
            android:background="#8a2e2e2e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_small">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.divetym.dive.ui.view.RobotoTextView
                    android:id="@+id/text_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:drawablePadding="@dimen/margin_small"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_location"
                    android:maxLines="1"
                    android:textSize="@dimen/roboto_regular_headline" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small">

                <com.divetym.dive.ui.view.DateRangeLayout
                    android:id="@+id/layout_date_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small">

                <com.divetym.dive.ui.view.RobotoTextView
                    android:id="@+id/text_dive_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_golf_course_black_24dp"
                    android:drawablePadding="@dimen/margin_small"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_dive_site"
                    android:maxLines="1"
                    android:textSize="@dimen/roboto_regular_headline" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button_search"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/action_search" />
        </LinearLayout>
</RelativeLayout>